<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/main_nav"
    app:startDestination="@id/main">

    <fragment
        android:id="@+id/main"
        android:name="tk.zwander.oneuituner.fragments.Main"
        >
        <action
            android:id="@+id/action_main_to_clock"
            app:destination="@id/clock" />
        <action
            android:id="@+id/action_main_to_qs"
            app:destination="@id/qs" />
        <action
            android:id="@+id/action_main_to_recents"
            app:destination="@id/recents" />
    </fragment>

    <fragment
        android:id="@+id/clock"
        android:label="clock"
        android:name="tk.zwander.oneuituner.fragments.Clock"
        />

    <fragment
        android:id="@+id/qs"
        android:label="qs"
        android:name="tk.zwander.oneuituner.fragments.QS"
        />

    <fragment
        android:id="@+id/recents"
        android:name="tk.zwander.oneuituner.fragments.Recents"
        android:label="recents"
        />

</navigation>